<!--шаблон карточки автомобиля-->
@model Car

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.imgCar" alt="@Model.nameCar" />
    <h2>Model: @Model.nameCar</h2>
    <p>@Model.longDescCar</p>
    <p>Цена: @Model.priceCar.ToString("c")</p>
    <p>
        <a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.id">Add in cart</a>
    </p>
</div>